<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Espress" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/Green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary brand color-->
        <item name="colorSecondary">@color/Green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:toolbarStyle">?attr/colorPrimaryVariant</item>
        <item name="android:timePickerDialogTheme">?attr/colorOnSecondary</item>
        <item name="android:datePickerDialogTheme">?attr/colorOnSecondary</item>
        <item name="android:spinnerStyle">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.Espress" parent="Base.Theme.Espress" />
</resources>