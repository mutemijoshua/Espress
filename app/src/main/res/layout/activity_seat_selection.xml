<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".SeatSelectionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Green"
                android:theme="@style/Base.Theme.Espress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Seat Selection" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/custom_edit_text"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="30dp"
                app:cardMaxElevation="20dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar1"
                tools:layout_editor_absoluteX="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Seat No"
                        android:id="@+id/selectSeatText"
                        android:textSize="36sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <GridLayout
                        android:id="@+id/seatGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alignmentMode="alignBounds"
                        android:columnCount="4"
                        android:padding="2dp"
                        android:rowCount="5"
                        android:useDefaultMargins="true">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <LinearLayout
                                android:id="@+id/row1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <CheckBox
                                    android:id="@+id/seat_1"
                                    style="@style/SeatCheckBox"
                                    android:layout_width="70dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="1" />
                                <CheckBox
                                    android:id="@+id/seat_2"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="2" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/row2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/row1">
                                <CheckBox
                                    android:id="@+id/seat_3"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="3" />
                                <CheckBox
                                    android:id="@+id/seat_4"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="4" />
                                <CheckBox
                                    android:id="@+id/seat_5"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="5" />

                                <CheckBox
                                    android:id="@+id/seat_6"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="6" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/row3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/row2">

                                <CheckBox
                                    android:id="@+id/seat_7"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="7" />

                                <CheckBox
                                    android:id="@+id/seat_8"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="8" />

                                <CheckBox
                                    android:id="@+id/seat_9"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="9" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/row4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/row3">

                                <CheckBox
                                    android:id="@+id/seat_10"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="10" />

                                <CheckBox
                                    android:id="@+id/seat_11"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="11" />

                                <CheckBox
                                    android:id="@+id/seat_12"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="12" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/row5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/row4">

                                <CheckBox
                                    android:id="@+id/seat_13"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="13" />

                                <CheckBox
                                    android:id="@+id/seat_14"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="14" />

                                <CheckBox
                                    android:id="@+id/seat_15"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="15" />

                                <CheckBox
                                    android:id="@+id/seat_16"
                                    style="@style/SeatCheckBox"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="16" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </GridLayout>
                    <Button
                        android:id="@+id/btn_Next"
                        android:text="Next"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>